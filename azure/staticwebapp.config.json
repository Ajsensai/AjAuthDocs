{
    "routes": [
      {
        "route": "/docs/*",
        "allowedRoles": ["authenticated"],
        "fallback": {
          "rewrite": "/index.html"
        }
      },
      {
        "route": "/.auth/logout",
        "rewrite": "/.auth/logout"
      },
      {
        "route": "/api/*",
        "allowedRoles": ["authenticated"]
      },
      {
        "route": "/*",
        "rewrite": "/index.html"
      }
    ],
    "navigationFallback": {
      "rewrite": "/index.html",
      "exclude": ["/.auth/*"]
    },
    "globalHeaders": {
      "Content-Security-Policy": "default-src 'self' 'unsafe-inline'; img-src *; font-src *"
    }
}
